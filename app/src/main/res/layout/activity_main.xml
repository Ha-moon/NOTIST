<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nanumsquareround"
        android:text="NOTIST"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textColorLink="#FFFFFF"
        android:textIsSelectable="false"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="90dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="340dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nameImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/login" />

        <ImageView
            android:id="@+id/passwordImage"
            android:layout_marginTop="45dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/password" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="270dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="340dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:background="@color/White"
            android:fontFamily="@font/nanumsquareroundr"
            android:inputType="text"
            android:hint="아이디"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:visibility="visible" />


        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_marginTop="45dp"
            android:background="@color/White"
            android:fontFamily="@font/nanumsquareroundr"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="170dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="400dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="130dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/loginButton"
            style="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:width="998px"
            android:background="@color/Black"
            android:backgroundTint="@color/Black"
            android:fontFamily="@font/nanumsquareroundb"
            android:gravity="center"
            android:text="로그인"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/GoogleloginButton"
            style="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/Black"
            android:backgroundTint="@color/Black"
            android:fontFamily="@font/nanumsquareroundb"
            android:gravity="center"
            android:text="구글 로그인"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
        <Button
            android:id="@+id/KakaologinButton"
            style="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/Black"
            android:backgroundTint="@color/Black"
            android:fontFamily="@font/nanumsquareroundb"
            android:gravity="center"
            android:text="카카오톡 로그인"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="600dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="62dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/searchButton"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@color/White"
            android:backgroundTint="@color/White"
            android:fontFamily="@font/nanumsquareroundr"
            android:text="ID/PW 찾기"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/signupButton"
            android:layout_width="62dp"
            android:layout_height="32dp"
            android:layout_marginLeft="40dp"
            android:background="#FFFFFF"
            android:backgroundTint="@color/White"
            android:fontFamily="@font/nanumsquareroundr"
            android:text="회원가입"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="15dp" />
    </LinearLayout>


</RelativeLayout>
